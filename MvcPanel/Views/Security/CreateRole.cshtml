@model DatabaseDomain.DTOs.Security.Role.NewRoleDTO

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewBag.Title = "ایجاد نقش";
    ViewBag.PageTitle = "ایجاد نقش";
}

<form method="post" asp-action="CreateRole">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Title" class="form-control" placeholder="عنوان" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">ذخیره</button>
    <a asp-action="Roles" class="btn btn-danger">بازگشت</a>
</form>

