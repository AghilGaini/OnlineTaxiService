@model DatabaseDomain.DTOs.Account.UserRoles.UserRolesDTO
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewBag.Title = "نقش های کاربر";
    ViewBag.PageTitle = "مدیریت نقش های کاربر";
}

<form method="post" asp-action="UserRoles">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="UserId" type="hidden" />
    <table class="table table-dark text-center table-bordered table-striped table-hover">
        <thead class="fontIranYekan">
            <tr>
                <th>عنوان</th>
                <th>انتخاب</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Roles[i].RoleTitle
                        <input asp-for="@Model.Roles[i].RoleTitle" type="hidden">
                        <input asp-for="@Model.Roles[i].RoleId" type="hidden">
                    </td>
                    <td>
                        <input asp-for="@Model.Roles[i].IsSelected">
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">ذخیره تغییرات</button>
    <a asp-action="users" class="btn btn-danger">بازگشت</a>
</form>


