@model DatabaseDomain.DTOs.Account.Login.loginDTO
@{
    Layout = "~/Views/Shared/_loginLayout.cshtml";
    ViewBag.Title = "ورود";
}

<form asp-action="login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Username" class="form-control" placeholder="نام کاربری" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control" placeholder="رمز عبور" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label for="chbRememberMe">مرا به خاطر بسپار</label>
        <input type="checkbox" id="chbRememberMe" asp-for="RememberMe" />
    </div>
    <div class="form-group">
        <input asp-for="UserType" checked="checked" type="radio" value="@((int)Enums.UserType.Passenger)" id="Gender" name="userType" />مسافر<br />
        <input asp-for="UserType" type="radio" value="@((int)Enums.UserType.Driver)" id="Gender" name="userType" />راننده<br />
    </div>
    <button type="submit" class="btn btn-success">ورود</button>
    <a asp-action="register" class="btn btn-info">ایجاد حساب</a>
</form>