@model DatabaseDomain.DTOs.Account.Login.loginDTO
@{
    Layout = "~/Views/Shared/_loginLayout.cshtml";

}

<form asp-action="login" method="post">
    <div class="form-group">
        <input asp-for="Username" class="form-controll" placeholder="نام کاربری" />
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-controll" placeholder="رمز عبور" />
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="RememberMe" />
    </div>
    <button type="submit" class="btn btn-success"></button>
</form>